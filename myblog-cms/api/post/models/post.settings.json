{
  "kind": "collectionType",
  "collectionName": "post",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "media": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "author": {
      "type": "string",
      "default": "George Aykara",
      "required": true
    },
    "posted_on": {
      "type": "date",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    }
  }
}
